@model LiveDev.Web.Models.ViewQuestion
@using LiveDev.Web.Helpers.Views.Exams;

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()){
    <fieldset>
        <legend>Exam</legend>
        <div>
            @Html.ValidationSummary(true)
        </div>
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">@Model.TextQuestion</div>
        
        <div class="editor-field">
            @Html.TextAreaFor(model => model.SourceCode, new { @class = "codeEditor" })
            @Html.ValidationMessageFor(model => model.SourceCode)
        </div>
        <p>
            <input type="submit" value="Send Answer" />
        </p>
    </fieldset>
}